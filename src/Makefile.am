lib_LTLIBRARIES = lib@project_name@.la

# ------------------
# defining variables
# ------------------
_no_error_com   =
_include_com    =
_sources_com    =
_cppflags_com   =
_cflags_com     =
_cxxflags_com   =
_ldflags_com    =
_ldadd_com      =

# ---------------------
# add necessary content
# ---------------------
_no_error_com   += -Wno-error=address

_include_com    += -I$(top_srcdir)/include

_sources_com    += \
                   hy_dlopen.c \
                   hy_fifo.c \
                   hy_log.c \
                   hy_md5sum.c \
                   hy_mem.c \
                   hy_sort.c \
                   hy_string.c \
                   hy_thread.c \
                   hy_utils.c

_cppflags_com   += \
                   -D_GNU_SOURCE \
                   $(CPPFLAGS_COM) \
                   $(_no_error_com) \
                   $(_include_com)

_cflags_com     += $(CFLAGS_COM)

_cxxflags_com   += $(CXXFLAGS_COM)

_ldflags_com    += \
                   -export-symbols-regex 'Hy*' \
                   -version-info @current@:@revision@:@age@ \
                   $(LIB_LDFLAGS_COM)

_ldadd_com      +=

lib@project_name@_la_SOURCES    = $(_sources_com)
lib@project_name@_la_CPPFLAGS   = $(_cppflags_com)
lib@project_name@_la_CFLAGS     = $(_cflags_com)
lib@project_name@_la_CXXFLAGS   = $(_cxxflags_com)
lib@project_name@_la_LDFLAGS    = $(_ldflags_com)
lib@project_name@_la_LIBADD     = $(_ldadd_com)

